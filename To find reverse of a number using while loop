#include <stdio.h>

int main() {
    int num, rev = 0, remainder;

    printf("Enter a number: ");
    scanf("%d", &num);

    int original = num; 

    while (num != 0) {
        remainder = num % 10;     
        rev = rev * 10 + remainder; 
        num = num / 10;           
    }

    printf("Reverse of %d is %d\n", original, rev);

    return 0;
}
