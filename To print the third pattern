#include <stdio.h>

int main() {
    int i, j;
    for(i = 1; i <= 3; i++) {
 
        for(j = 1; j <= 3-i; j++)
            printf(" ");
      
        for(j = 1; j <= i; j++) {
            printf("*");
            if(j < i) printf(" "); 
        }
        printf("\n");
    }
    for(i = 1; i <= 2; i++) {
    
        for(j = 1; j <= i; j++)
            printf(" ");
        for(j = 1; j <= 3-i; j++) {
            printf("*");
            if(j < 3-i) printf(" ");
        }
        printf("\n");
    }

    return 0;
}
